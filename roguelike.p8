-- init --

function _init()
    _update_func=update_game
    _draw_func=draw_game
    start_game()

    -- globals --
    frame_timer=0
    plr_anim={240,241,242,243}
end

-->8
-- update --

function _update()
    frame_timer+=1
    _update_func()
end

function update_game()
    if btnp(⬅️) then
        plr_x-=1
        plr_offset_x=8
        _update_func=update_plr_turn
    end
    if btnp(➡️) then
        plr_x+=1
        plr_offset_x=-8
        _update_func=update_plr_turn
    end
    if btnp(⬆️) then
        plr_y-=1
        plr_offset_y=8
        _update_func=update_plr_turn
    end
    if btnp(⬇️) then
        plr_y+=1
        plr_offset_y=-8
        _update_func=update_plr_turn
    end
end

function update_game_over()

end

function update_plr_turn()
    if plr_offset_x>0 then
        plr_offset_x-=1
    end
    if plr_offset_x<0 then
        plr_offset_x+=1
    end
    if plr_offset_y>0 then
        plr_offset_y-=1
    end
    if plr_offset_y<0 then
        plr_offset_y+=1
    end
    if plr_offset_x==0 and plr_offset_y==0 then
        _update_func=update_game
    end
end

-->8
-- draw --

function _draw()
    _draw_func()
end

function draw_game()
    cls()
    map()

    draw_sprite(get_frame(plr_anim),plr_x*8+plr_offset_x,plr_y*8+plr_offset_y,10)
end

function draw_game_over()

end

function draw_sprite(_spr,_x,_y,_col)
    palt(0,false) --set black to non transparent
    pal(6,_col) --change pallete color 6 to 10
    spr(_spr,_x,_y) --draw layer
    pal() --reset pallete
end

-->8
-- functions--

function start_game()
    plr_x=1
    plr_y=3
    plr_offset_x=0
    plr_offset_y=0
end

